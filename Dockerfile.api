# Use Node.js LTS
FROM node:20-alpine AS base

# Install dependencies only when needed
FROM base AS deps
WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm install

# Production image
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules
COPY package*.json ./

# Copy source code
COPY *.ts ./
COPY intake ./intake
COPY queue ./queue
COPY vector ./vector
COPY analytics ./analytics
COPY llm_worker ./llm_worker
COPY reply ./reply
COPY database ./database

# Expose port
EXPOSE 3001

# Start API server
CMD ["npx", "ts-node", "api-server.ts"]
